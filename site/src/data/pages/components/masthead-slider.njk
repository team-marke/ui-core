<h1>{{ metadata.title | e | safe }}</h1>
<p>{{ metadata.description | e | safe }}</p>

<h2>Exemplo</h2>
<div class="docs-example">
  {% set slides = [] %}
  {% for item in masthead.items %}
    {% set masthead %}
      {% set children %}
        <div class="container">
          <div class="row">
            <div class="col-12 text-center text-white">
              <h1>{{ item.title }}</h1>
              <p>{{ item.description }}</p>
            </div>
          </div>
        </div>
      {% endset %}
      {% set context = {
        image: item.image,
        background_color: '#b7485d',
        children: children,
        darkened: true
      } %}
      {% include "masthead/masthead.njk" %}
    {% endset %}
    {% set slides = (slides.push(masthead), slides) %}
  {% endfor %}
  {% set context = {
    slides: slides
  } %}
  {% include "masthead-slider/masthead-slider.njk" %}
</div>

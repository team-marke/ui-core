{% if context %}
    {% set item = context.items %}
        {%- if context.divider == "standard" -%}
            {% set divider = "breadcrumbs--standard" %}
        {%- endif -%}
        {%- if context.divider == "slash" -%}
            {% set divider = "breadcrumbs--slash" %}
        {%- endif -%}
{% endif %}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        {%- for item in items %}
            <li class="breadcrumb-item">
                <a href="{{ item.url | url }}">{{ item.title | e | safe }}</a>
            </li>
        {%- endfor %}
    </ol>
</nav>
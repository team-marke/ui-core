{%- if context -%}
  {%- if context.id -%}
    {% set id = context.id + '-' %}
  {%- else -%}
    {% set id = 'faq-' %}
  {%- endif -%}
  {% set items = context.items %}
  {% set indexRandom = [ 1, 2, 3, 4, 5, 6, 7, 8, 9 ] | random %}
  {%- if context.questionTag %}
    {% set questionTag = context.questionTag %}
  {%- else %}
    {% set questionTag = 'div' %}
  {%- endif %}
{%- endif -%}

<div class="col col-12">
  <div class="faq accordion" id="{{ id | safe }}{{ indexRandom | safe }}">
    {%- if items %}
      {% for item in items %}
        <div class="faq__item accordion-item">
          <{{ questionTag | e | safe }} class="faq__question accordion-header" id="{{ id | safe }}{{ indexRandom | safe }}-heading-{{ loop.index0 | safe }}">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#{{ id | safe }}{{ indexRandom | safe }}-collapse-{{ loop.index0 | safe }}" aria-expanded="false" aria-controls="{{ id | safe }}{{ indexRandom | safe }}-collapse-{{ loop.index0 | safe }}">{{ item.question | e | safe }}</button>
          </{{ questionTag | e | safe }}>
          <div id="{{ id | safe }}{{ indexRandom | safe }}-collapse-{{ loop.index0 | safe }}" class="faq__answer accordion-collapse collapse" aria-labelledby="{{ id | safe }}{{ indexRandom | safe }}-heading-{{ loop.index0 | safe }}" data-bs-parent="#{{ id | safe }}{{ indexRandom | safe }}">
            <div class="accordion-body">{{ item.answer | markdown | safe }}</div>
          </div>
        </div>
      {% endfor %}
    {%- endif %}
  </div>


</div>